# Pomo-Doro Environment Variables

# Alarm Sync Configuration
NEXT_PUBLIC_API_URL=https://api.pomo-doro.com
NEXT_PUBLIC_API_KEY=your-api-key-here

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id-here

# Feature Flags
NEXT_PUBLIC_ENABLE_SYNC=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Default Alarm Settings
NEXT_PUBLIC_DEFAULT_ALARM_DURATION=30
NEXT_PUBLIC_DEFAULT_ALARM_SOUND=alarm-tone-1
